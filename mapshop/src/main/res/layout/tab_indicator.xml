<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="54dip"
    android:layout_marginLeft="-3dip"
    android:layout_marginRight="-3dip"
    android:layout_weight="1">

    <LinearLayout
        android:id="@+id/indicator_content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tab_indicator_icon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:contentDescription="@null"
           />

        <TextView
            android:id="@+id/tab_indicator_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/selector_home_text_color"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tab_indicator_unread"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/indicator_content"
        android:background="@drawable/red_oval"
        android:gravity="center"
        android:visibility="gone"
        android:text="1"
        android:textColor="#fff"
        android:textSize="10sp" />

</RelativeLayout>